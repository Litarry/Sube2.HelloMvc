@model OgrViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ogrenci Detay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">Öğrenci Detayları</h3>
                <h5 class="mb-3">Ders Adı: <span class="badge bg-primary">@Model.Ders.DersAd</span></h5>
                <h5 class="mb-3">Öğrenci Adı: <span class="badge bg-secondary">@Model.Ogrenci.Ad</span></h5>
                <h5 class="mb-3">Öğretmen Adı: <span class="badge bg-info">@Model.Ogretmen.Ad</span></h5>

                <hr />

                <h4>ViewData ile gelen öğrenci bilgileri</h4>
                @if (ViewData["ogrenci"] != null)
                {
                    <p class="text-success">Ad: @(((Ogrenci)ViewData["ogrenci"]).Ad)</p>
                }
                else
                {
                    <p class="text-danger">Öğrenci Bulunamadı!</p>
                }

                <h4>ViewBag ile gelen öğrenci bilgileri</h4>
                @if (ViewBag.student != null)
                {
                    <p class="text-success">Ad: @ViewBag.student.Ad</p>
                }
                else
                {
                    <p class="text-danger">Öğrenci Bulunamadı!</p>
                }

                <div class="mt-4 text-center">
                    <a href="/Student/EditStudent/@Model.Ogrenci.Ad" class="btn btn-warning btn-lg me-2">Düzenle</a>
                    <a href="/Student/DeleteStudent/@Model.Ogrenci.Ad" class="btn btn-danger btn-lg">Sil</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFfUJbIhuwRsFyRJkjAWcnwLb7xsk7r6toKp8yhvH+8HvtF2YBgqW9CKMp" crossorigin="anonymous"></script>
</body>
</html>
